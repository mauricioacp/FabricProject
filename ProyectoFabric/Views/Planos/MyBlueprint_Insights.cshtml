<input id="appUserId" type="hidden" name="name" value="@Model.appUserId" />
<input id="recinto_nombre" type="hidden" name="RoomName" value="@Model.Recinto.Nombre" />
<input id="recinto_ancho" type="hidden" name="RoomWidth" value="@Model.Recinto.Ancho" />
<input id="recinto_alto" type="hidden" name="RoomHeight" value="@Model.Recinto.Alto" />
@foreach (Ventana item in Model.Recinto.Ventanas)
{
    <input class="ventanas_nombres" type="hidden" name="name" value="@item.Nombre" />
    <input class="ventanas_distance" type="hidden" name="name" value="@item.Distance" />
    <input class="ventanas_wallside" type="hidden" name="name" value="@item.WallSide" />
    <input class="ventanas_width" type="hidden" name="name" value="@item.Width" />
}
@foreach (Puerta item in Model.Recinto.Puertas)
{
    <input class="puertas_nombres" type="hidden" name="name" value="@item.Nombre" />
    <input class="puertas_distance" type="hidden" name="name" value="@item.Distance" />
    <input class="puertas_wallside" type="hidden" name="name" value="@item.WallSide" />
    <input class="puertas_width" type="hidden" name="name" value="@item.Width" />
    <input class="puertas_dooraxis" type="hidden" name="name" value="@item.DoorAxis" />
    <input class="puertas_dooropening" type="hidden" name="name" value="@item.DoorOpening" />
}
<div class="site-block-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <a id="room" class="site-block-feature d-flex p-4 rounded mb-4">
                    <div class="mr-3">
                        <span class="icon flaticon-interior-design font-weight-light h2"></span>
                    </div>
                    <div class="text">
                        <h3>Create Room</h3>
                        <p>Made with Canvas</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4">
                <a id="door" class="site-block-feature d-flex p-4 rounded mb-4">
                    <div class="mr-3">
                        <span class="icon flaticon-measuring font-weight-light h2"></span>
                    </div>
                    <div class="text">
                        <h3>Door</h3>
                        <p>Powered by Fabric.Js</p>
                    </div>
                </a>
            </div>
            <div class="col-lg-4">
                <a id="window" class="site-block-feature d-flex p-4 rounded mb-4">
                    <div class="mr-3">
                        <span class="icon flaticon-window font-weight-light h2"></span>
                    </div>
                    <div class="text">
                        <h3>Window</h3>
                        <p>Make your own designs</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>


<div class="site-section">
    <select class="form-control" id="sel1">
        <option value="0">Select your object</option>
    </select>
    <button id="GuardarPlano" type="button" class="btn btn-dark room">
        Guardar Plano
    </button>
    <button id="botonDeleteAll" type="button" class="btn btn-danger window">
    </button>
    <div class="canvasTablas row">
        <div class="col-6 cajaCanvas">

            <canvas width="500" height="500" id="canvas"></canvas>

        </div>
        <div id="edicion" class="col-6 workPlace">
            <div class="container">


            </div>
        </div>

    </div>

</div>

